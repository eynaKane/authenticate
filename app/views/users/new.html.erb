<div><h1>Sign Up Page</h1></div>
<div>
  <%= form_for @user do |f| %>
    <%= f.label :first_name, "First Name" %> <%= f.text_field :first_name %> <br>
    <%= f.label :last_name, "Last Name" %> <%= f.text_field :last_name %>
    <div>
      <%= f.label :email, "Email" %> <%= f.text_field :email %> <br>
      <%= f.label :password, "Password" %> <%= f.password_field :password %>
      <%= f.submit "Submit", :disable_with => 'Submitting...' %>
    </div>
  <% end %>
</div>
